<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:padding="12dp">

    <ImageView
        tool:src="@mipmap/ic_launcher"
        android:id="@+id/album"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <TextView
        tool:text="song name"
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/album"
        app:layout_constraintBottom_toTopOf="@id/songArtistName"
        app:layout_constraintTop_toTopOf="@id/album"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_marginLeft="16dp"
        tool:text="Artist Name"
        android:id="@+id/songArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/album"
        app:layout_constraintTop_toBottomOf="@id/songTitle"
        app:layout_constraintBottom_toBottomOf="@id/album"
        android:textSize="15sp"
        android:lines="1"
        android:ellipsize="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>